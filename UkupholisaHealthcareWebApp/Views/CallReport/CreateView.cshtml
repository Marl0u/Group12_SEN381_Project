@model FamilyLink
@{
    <div class="container">
        <h1 class="text-center">Thank you Mr/Ms <strong>@Model.FamilyName</strong></h1>
        <hr>
        <form asp-action="Create">
            <div class="row justify-content-center">
                <div class="col-7 form-group text-center">
                    <input class="form-check-input invisible" type="text" name="familyId" value="@Model.Id">
                    <input class="form-check-input" type="checkbox" name="isSatisfied" value="true" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        Are you satisfied?
                    </label>
                </div>
            </div>
            <div class="row text-center justify-content-center mt-5">
                <input type="submit" value="EndCall" class="col-6 btn btn-outline-danger" />
            </div>
        </form>
    </div>
}
