@using UkupholisaHealthcare.Library.Models
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}
@model List<CallReport>
@{
    <div class="container">
        <h1 class="text-center">Call Report Management</h1>
        <hr />
        <a class="btn btn-outline-primary" asp-action="CreateView"><i class="fa-solid fa-plus"></i>Add new Call Report to database</a>
        <div class="row">
            <form class="form-inline" asp-action="Filter">
                <div class="row mt-3">
                    <div class="col-8">
                        <input class="form-control" type="text" id="providerName" name="providerName" placeholder="Search for a Call Report" required />
                    </div>
                    <div class="col-4">
                        <button class="btn btn-outline-primary btn-block" type="submit"><i class="fa-solid fa-magnifying-glass"></i> Search</button>
                    </div>
                </div>
            </form>
        </div>
        <hr />
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <td>Id</td>
                    <td>Client</td>
                    <td>Call Duration</td>
                    <td>Client Satisfaction</td>
                    <td>Manage</td>
                    <td>Delete</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var call in Model)
                {
                    <tr>
                        <td>@call.Id</td>
                        <td>
                            <a class="btn btn-outline-primary" asp-action="ViewCallClient" asp-route-id="@call.Client_Id"><i class="fa-solid fa-eye"></i> View Client</a>
                        </td>
                        <td>@call.CallDuration sec</td>
                        @if (call.IsSatisfied)
                        {
                            <td>
                                <span class="badge bg-success">Satisfied</span>
                            </td>
                        }
                        else
                        {
                            <td>
                                <span class="badge bg-danger">Not Satisfied</span>
                            </td>
                        }

                        <td>
                            <a class="btn btn-outline-info" asp-action="EditView" asp-route-id="@call.Id"><i class="fa-solid fa-pencil"></i> Edit</a>
                           
                        </td>
                        <td>
                            <form asp-action="Delete" method="OnGetDelete" asp-route-id="@call.Id"
                          onclick="return confirm('Are you sure you want to delete this?')">
                                <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt text-white"></i> Delete</button>
                            </form>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts
    {
    <script>
        $('.list-group-item').removeClass('active');
        $('#callReportLink').addClass('active');
    </script>
}
