@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <form class="text-center" asp-controller="CallController" asp-action="Index">
        <h1 class="display-4">Welcome to Ukupholisa Healthcare</h1>
        <hr />
        <div class="row mt-5">
            <div class="col-2">
                <label class="form-label h4" for="clientEmail">Client Email:</label>
            </div>
            <div class="col-7">
                <input class="form-control" type="text" name="clientEmail" placeholder="Client Email" required />
            </div>
            <div class="col-3 justify-content-center">
                <a class="col-6 btn btn-outline-success" data-toggle="tooltip" data-placement="top" title="Use this to call us"><i class="fa-solid fa-phone"></i> Start a Call </a>
            </div>
        </div>
    </form>
    <form class="text-center">
        <div class="row mt-4">
            <h4 class="col-2">New Client?</h4>
            <a class="col-7 btn btn-outline-success btn-lg" type="submit" asp-controller="Client" asp-action="ClientInfo" data-toggle="tooltip" data-placement="top" title="Use this to call us" /><i class="fa-solid fa-phone"></i> New Client Call</a>
            <div class="col-3">

            </div>
        </div>
    </form>
</div>