@{
    <div class="container">
        <h1 class="text-center">Employee Login</h1>
        <form asp-action="Login">
            <div class="row mt-3">
                <div class="col-3">
                    <label class="form-label text-right" for="email">Employee Email :</label>
                </div>
                <div class="col-9">
                    <input class="form-control" type="text" name="email" required />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-3">
                    <label class="form-label" for="password">Employee Password :</label>
                </div>
                <div class="col-9">
                    <input class="form-control" type="password" name="password" required />
                </div>
            </div>
            <div class="row justify-content-center mt-5">
                <input class="col-6 btn btn-primary" type="submit" value="Login" />
            </div>
        </form>
    </div>
}
