@using UkupholisaHealthcare.Library.Models
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}
@model List<FamilyLink>
@{
    <div class="container">
        <h1 class="text-center">Client Manager</h1>
        <hr />
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <td>Id</td>
                    <td>Family Name</td>
                    <td>DateCreated</td>
                    <td>View Members</td>
                    <td>Family Policy</td>
                    <td>Delete</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var family in Model)
                {
                    <tr>
                        <td>@family.Id</td>
                        <td>@family.FamilyName</td>
                        <td>@family.DateCreated</td>
                        <td>
                            <a class="btn btn-outline-success" asp-action="ViewMembers" asp-route-id="@family.Id"><i class="fa-solid fa-eye"></i> View Members</a>
                        </td>
                        <td>
                            <a class="btn btn-outline-dark" asp-action="ViewFamilyPolicy" asp-route-id="@family.Id"><i class="fa-solid fa-eye"></i> View Policy</a>
                        </td>
                        <td>
                            <form asp-action="DeleteFamily" method="OnGetDelete" asp-route-id="@family.Id"
                          onclick="return confirm('Are you sure you want to delete this?')">
                                <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt text-white"></i> Delete</button>
                            </form>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts
    {
    <script>
        $('.list-group-item').removeClass('active');
        $('#clientLink').addClass('active');
    </script>
}

